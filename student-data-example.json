  "dataArchitecture": {
    "separationOfConcerns": {
      "admissionsData": "Lead, Application, Test, Interview, Decision - stored in mockDataLinked.ts",
      "studentIdentity": "Student core fields (name, DOB, nationality, contact) - stored in mockDataLinked.ts",
      "erpData": "Enrollment, Terms, Teacher Assignments - stored in separate ERP files"
    },
    "deterministicValues": {
      "method": "Seeded random number generation using LCG algorithm",
      "benefits": [
        "UI values don't change on reload",
        "Consistent test results",
        "Reproducible bug reports"
      ],
      "examples": {
        "attendance": "seededNumber(studentId-T1, 85, 100) = 92",
        "gradeAverage": "seededNumber(studentId-T1-avg, 70, 100) = 85",
        "bloodType": "seededPick(studentId-blood, bloodTypes) = A+",
        "noteCount": "seededNumber(studentId-notecount, 2, 4) = 3"
      }
    },
    "linkingKeys": {
      "Student.id": "Primary key for all student data",
      "Enrollment.studentId": "Links to Student.id",
      "Term.enrollmentId": "Links to Enrollment.enrollmentId",
      "Guardian.guardianId": "Primary key for guardians",
      "GuardianLink": "Many-to-many relationship between students and guardians"
    }
  },
  "usageExamples": {
    "getStudentWithAllData": {
      "description": "How to fetch complete student information",
      "steps": [
        "1. Get student: getStudentById('STU-APP-2024-001')",
        "2. Get enrollment: getEnrollmentByStudentId(student.id)",
        "3. Get current term: getCurrentTerm(enrollment.enrollmentId)",
        "4. Get all terms: getTermsByEnrollmentId(enrollment.enrollmentId)",
        "5. Get YTD averages: getYearToDateAverages(enrollment.enrollmentId)",
        "6. Get class teacher: getClassTeacher(enrollment.grade, enrollment.section)",
        "7. Get subject teachers: getSubjectTeachers(enrollment.grade, enrollment.section)",
        "8. Get guardians: getStudentGuardians(student.id)",
        "9. Get medical profile: getStudentMedicalProfile(student.id)",
        "10. Get documents: getStudentDocuments(student.id)",
        "11. Get notes: getStudentNotes(student.id)",
        "12. Get timeline: getStudentTimeline(student.id)"
      ]
    },
